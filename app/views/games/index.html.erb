<h3><%= "Lista de todos os jogos disponiveis" %></h3>

<% if current_user.role == "admin" %>
	<%= link_to "Criar novo", new_game_url %>
<% end %>

<% if @games.empty? %>
	<p><b>Não há nenhum jogo cadastrado no site</b></p>

<% else %>
	<table class="table_game">
		<th>Nome</th>
		<th>Console</th>
		<th>Gênero</th>


		<% @games.each do |game| %> 
			<tr>
				<td><%= game.name %></td>
				<td><%= game.console.name if game.console %></td>
		    	<td><%= game.gender.name if game.gender %></td>
		    	<td><%= link_to "Editar", edit_game_url(game) %></td>
				<% if game.game_samples.empty? %>
					<td><%= link_to "Deletar", game, :method => :delete %></td>
				<% end %>
		    </tr>
		<% end %>
	</table>
<% end %>